<div class="navbar navbar-light bg-light justify-content-between border-bottom p-4">
  <div>
    <%= link_to "Wikiminous", articles_path, class: "text-secondary" %>
  </div>
  <div>
    <%= link_to "Create a new Task", new_article_path, class: "text-secondary" %>
  </div>
</div>


<div class="container d-flex justify-content-center mt-5 mr-5 pr-5">
  <div class="row">
    <div class="col">
      <h2>Edit Article</h2>

      <%= form_for(@article) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :content %>
        <%= f.text_area :content %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
